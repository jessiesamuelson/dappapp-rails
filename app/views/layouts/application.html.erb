<!DOCTYPE html>
<html>
<head>
  <title>Dappapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style>
		.col-md-4 {
			height: 400px;
		}
  </style>
</head>
<body>

	<% if current_user %>
	  <%= current_user.email %>
	<% end %>


	<%= yield %>


	<% if current_user %>
	  <%= link_to 'Log-out', login_path, method: :delete %>
	<% end %>

</body>
</html>
